<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carboncredits.carbon_integration_system.mapper.UserMapper">


    <select id="findUserById" resultType="com.carboncredits.carbon_integration_system.model.User">
        select * from user_basic where user_id = #{id}
    </select>
    <select id="getUserDailyItinerary"
            resultType="com.carboncredits.carbon_integration_system.model.DailyItinerary">
        SELECT * FROM message_itinerary_daily WHERE user_id = #{userId}
    </select>
    <select id="getUserCarbonCredits" resultType="java.lang.Integer">
        SELECT carbon_credits_total FROM user_carbon_credits WHERE user_id=#{userId}
    </select>


</mapper>